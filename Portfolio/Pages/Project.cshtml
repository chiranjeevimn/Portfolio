@page
@model ProjectModel
@{
    ViewData["Title"] = "Skills";
}


<style>
    /*****SKILL SECTION*****/
    .main-section{
        background-color:chartreuse;
    }
    h2{
        text-align:center;
    }
    .skill {
        margin-top: 30px;
        font-size: 17px;
    }

    .heading1 {
        font-size: 24px;
        text-align: center;
    }

    .skill span {
        float: right;
    }

    .skill div {
        width: 100%;
        float: left;
        margin-top: 5px;
        background: #e7e7e7;
        border-radius: 10px;
    }

        .skill div span {
            background: #ffbf35;
            height: 5px;
            float: left;
        }

    .width-50 {
        width: 50%;
        box-sizing: border-box;
        padding: 10px;
        display: inline-block; /* Make each container inline-block */
    }

    .width-50 {
        width: 50%;
        box-sizing: border-box;
        padding: 10px;
        display: inline-block; /* Make each container inline-block */
    }

    .container-wrapper {
        display: flex;
    }

    .width-501 {
        width: 50%;
        box-sizing: border-box;
        padding: 10px;
    }

    .skill {
        width: 100%;
        box-sizing: border-box;
        padding: 10px;
    }

    .width-501 {
        float: left;
    }

    .width-50 {
        width: 50%;
        box-sizing: border-box;
        padding: 10px;
        float: left;
    }

    div[role="progressbar"] {
        color: #ffbf35;
        margin-left: 100px;
        margin-bottom: 20px;
        width: 100px;
        height: 100px;
        border-radius: 50%;
        place-items: center;
        display: grid;
        --pgPercentage: var(--value);
        background: radial-gradient(closest-side, black 80%, transparent 0 99.9%, black 0), conic-gradient(#ffbf35 calc(var(--pgPercentage) * 1%), #ffe6af 0);
    }
</style>
<!------SKILL SECTION------>
<div class="main-section">
    <div class="container">
        <h2 class="heading-text">My Skills</h2>
        <div class="width-50">
            <h1 class="heading1">Technical Skills</h1>
            <div class="skill">
                <b>HTML</b>
                <span>95%</span>
                <div>
                    <span style="width:95%"></span>
                </div>
            </div>
            <div class="skill">
                <b>CSS</b>
                <span>91%</span>
                <div>
                    <span style="width:91%"></span>
                </div>
            </div>
            <div class="skill">
                <b>JavaScript</b>
                <span>85%</span>
                <div>
                    <span style="width:85%"></span>
                </div>
            </div>
            <div class="skill">
                <b>React js</b>
                <span>79%</span>
                <div>
                    <span style="width:79%"></span>
                </div>
            </div>
        </div>
        <div class="width-50">
            <h1 class="heading1">Professional Skills</h1>
            <div class="width-501">
                <div role="progressbar" aria-valuenow="65" aria-valuemin="0" aria-valuemax="100" style="--value:65">React-65</div>
            </div>
            <div class="width-501">
                <div role="progressbar" aria-valuenow="85" aria-valuemin="0" aria-valuemax="100" style="--value:85">Jquery-85</div>
            </div>
            <div class="width-501">
                <div role="progressbar" aria-valuenow="65" aria-valuemin="0" aria-valuemax="100" style="--value:65">Node-65</div>
            </div>
            <div class="width-501">
                <div role="progressbar" aria-valuenow="85" aria-valuemin="0" aria-valuemax="100" style="--value:85">CMD-85</div>
            </div>
        </div>
    </div>
</div>
